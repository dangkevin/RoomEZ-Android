<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.anthonygrisaffi.roomez.CreateCalendarEvent">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:hint="Event title"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventDetails"
        android:layout_below="@+id/eventTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Details about the Event"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/currentDate"
        android:layout_below="@+id/eventDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        style="?android:attr/borderlessButtonStyle"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:paddingBottom="10dp"
        android:ems="10"
        android:id="@+id/currentTime"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignTop="@+id/currentDate"
        android:layout_toRightOf="@+id/currentDate"
        android:layout_toEndOf="@+id/currentDate" />
</RelativeLayout>
