<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name = "colorPrimary"> #0288D1</item>
        <item name = "colorPrimaryDark">#01579B</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="CustomDialogTheme"
        parent="@android:style/Theme.Dialog">
        <item
            name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item
            name="android:windowNoTitle">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_shade</item>

    </style>

</resources>
